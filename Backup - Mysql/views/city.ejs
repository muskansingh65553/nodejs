<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Codescandy" />

    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon/favicon.ico" />
    <!-- Theme CSS -->
    <link rel="stylesheet" href="/css/theme.min.css" />

    <link rel="canonical" href="blog.html" />
    <title>Blog | Geeks - Bootstrap 5 Template</title>
  </head>

  <body class="bg-white">
    <!-- Page content -->
    <main>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-0">
          <a class="navbar-brand" href="../index.html"><img src="/images/brand/logo/logo.svg" alt="Geeks" /></a>
          <div class="order-lg-3 d-flex align-items-center">
     
          </div>

          <!-- Collapse -->
          <div class="collapse navbar-collapse" id="navbar-default">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="landing-job.html">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="landing-job.html">Privacy Policy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="landing-job.html">Contact us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="landing-job.html">Disclamier</a>
                </li>
            </ul>
            <form class="mt-3 mt-lg-0 ms-lg-3 d-flex align-items-center">
              <span class="position-absolute ps-3 search-icon">
                <i class="fe fe-search"></i>
              </span>
              <label for="search" class="visually-hidden"></label>
              <input type="search" id="search" class="form-control ps-6" placeholder="Search Cities" />
            </form>
          </div>
        </div>
      </nav>

      <!-- Page header -->
      <section class="py-8">
        <div class="container">
          <div class="row">
            <div class="offset-xl-2 col-xl-8 offset-lg-1 col-lg-10 col-md-12 col-12">
              <div class="text-center mb-5">
                <h1 class="display-2 fw-bold">Geeks Newsroom</h1>
                <p class="lead">Our features, journey, tips and us being us. Lorem ipsum dolor sit amet, accumsan in, tempor dictum neque.</p>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Content -->
      <section class="pb-8">
        <div class="container">
          <div class="row">
            
        
            
            <div class="row">
                <% cities.forEach(city => { %>
                  <div class="col-xl-4 col-lg-4 col-md-6 col-12">
                    <!-- Card -->
                    <div class="card mb-4 shadow-lg card-lift">
                      <!-- Card body -->
                      <div class="card-body">
                        <h3><a href="/<%= state %>/<%= city.CITY %>" class="text-inherit"><%= city.CITY %></a></h3>
                        <p><%= city.CITY_DESC %></p>
                        <!-- Media content -->
                        <div class="row align-items-center g-0 mt-4">
                          <div class="col lh-1">


                            <!-- Display author's name and publication date -->
<% if (authorInfo && authorInfo.Author_Name && authorInfo.Pub_Date) { %>
    <h5 class="mb-1">Author: <%= authorInfo.Author_Name %></h5>
    <p class="fs-6 mb-0">Published Date: <%= authorInfo.Pub_Date %></p>
  <% } else { %>
    <p>Author information not available</p>
  <% } %>
 
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
        </div>
      </section>
    </main>


    <!-- Footer -->
    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="row align-items-center g-0 border-top py-2">
          <!-- Desc -->
          <div class="col-md-6 col-12 text-center text-md-start">
            <span>
              Â©
              <span id="copyright">
                <script>
                  document.getElementById("copyright").appendChild(document.createTextNode(new Date().getFullYear()));
                </script>
              </span>
              Geeks. All Rights Reserved.
            </span>
          </div>
          <!-- Links -->
          <div class="col-12 col-md-6">
            <nav class="nav nav-footer justify-content-center justify-content-md-end">
              <a class="nav-link active ps-0" href="#!">Privacy</a>
              <a class="nav-link" href="#!">Terms</a>
              <a class="nav-link" href="#!">Feedback</a>
              <a class="nav-link" href="#!">Support</a>
            </nav>
          </div>
        </div>
      </div>
    </footer>

 

    <!-- Scripts -->
    <!-- Libs JS -->
    <script src="/libs/%40popperjs/core/dist/umd/popper.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/libs/simplebar/dist/simplebar.min.js"></script>

    <!-- Theme JS -->
    <script src="/js/theme.min.js"></script>

    <script src="/js/vendors/validation.js"></script>
  </body>

 </html>
