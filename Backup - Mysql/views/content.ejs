<!-- views/content.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FAQs for <%= cityInfo.CITY %> - <%= state %></title>
  <link rel="canonical" href="<%= canonicalUrl %>" />
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "<%= canonicalUrl %>"
      },
      "headline": "Rent Assistance in <%= cityInfo.CITY %>, <%= state %>",
      "image": "", // Add an image URL if available
      "author": {
        "@type": "Person",
        "name": "<%= authorInfo.Author_Name %>",
        "description": "<%= authorInfo.Author_Bio %>"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Rent Assistance Program",
        "logo": {
          "@type": "ImageObject",
          "url": "/logo.svg"
        }
      },
      "datePublished": "<%= cityInfo.Pub_Date %>"
    }
  </script>
</head>
<body>
  <h1>FAQs for <%= cityInfo.CITY %> - <%= state %></h1>
  <p><%= cityInfo.CITY_DESC %></p>
  <ul>
    <% faqs.forEach(faq => { %>
      <li><%= faq.FAQ %></li>
    <% }); %>
  </ul>
</body>
</html>
